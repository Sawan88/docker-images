#!/bin/bash
#

set -ex

PY_VER_STR=$(docker run --tty --rm --entrypoint /bin/bash "${IMAGE_NAME}" -c "python --version")
MKDOCS_VER_STR=$(docker run --tty --rm --entrypoint /bin/bash "${IMAGE_NAME}" -c "mkdocs --version")
PYMDOWN_VER_STR=$(docker run --tty --rm --entrypoint /bin/bash "${IMAGE_NAME}" -c "pip show pymdown_extensions | grep -e '^Version:'")

echo "${PY_VER_STR}"
echo "${MKDOCS_VER_STR}"
echo "Python Markdown Extension ${PYMDOWN_VER_STR}"

docker tag "${IMAGE_NAME}" "${DOCKER_REPO}:latest"
docker push "${DOCKER_REPO}:latest"
